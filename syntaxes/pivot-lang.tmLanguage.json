{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "pivot-lang",
	"patterns": [
		{
			"include": "#strings"
		},
		{
			"name": "comment",
			"match": "//.*$"
		},
		{
			"include": "#expr.as"
		},
		{
			"include": "#expr.is"
		},
		{
			"include": "#array"
		},
		{
			"include": "#struct"
		},
		{
			"include": "#use"
		},
		{
			"include": "#function"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#char"
		},
		{
			"include": "#numberic"
		},
		{
			"include": "#function.call"
		},
		{
			"include": "#macro.call"
		},
		{
			"include": "#namespace.prefix"
		},
		{
			"include": "#variable"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control",
					"match": "\\b(if|while|for|return|else|break|continue|yield|match)\\b"
				},
				{
					"name": "keyword",
					"match": "\\b(struct|fn|let|use|const|true|false|impl|self|trait|pub|where|macro|type|as|is|gen|var)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		},
		"char": {
			"name": "string.quoted.single",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape",
					"match": "\\\\."
				}
			]
		},
		"struct": {
			"patterns": [
				{
					"match": "\\b(struct)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
					"captures": {
						"1": {
							"name": "keyword"
						},
						"2": {
							"name": "entity.name.type"
						}
					}
				}
			]
		},
		"variable": {
			"name": "variable",
			"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
		},
		"use": {
			"patterns": [
				{
					"match": "\\b(use)\\s+([a-zA-Z_][a-zA-Z0-9_]*)(::[a-zA-Z_][a-zA-Z0-9_]*)*",
					"captures": {
						"1": {
							"name": "keyword"
						},
						"2": {
							"name": "entity.name.namespace"
						},
						"3": {
							"name": "entity.name.namespace"
						}
					}
				}
			]
		},
		"namespace.prefix": {
			"match": "\\b(([a-zA-Z_][a-zA-Z0-9_]*)::)+",
			"captures": {
				"1": {
					"name": "entity.name.namespace"
				}
			}
		},
		"function.call": {
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(<[^>]*>)?\\s*\\(",
			"captures": {
				"1": {
					"name": "entity.name.function"
				},
				"2": {
					"name": "entity.name.type"
				}
			}
		},
		"macro.call": {
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)!\\s*\\(",
			"captures": {
				"1": {
					"name": "entity.name.function"
				}
			}
		},
		"expr.as": {
			"match": "\\b(as)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
			"captures": {
				"1": {
					"name": "keyword"
				},
				"2": {
					"name": "entity.name.type"
				}
			}
		},
		"expr.is": {
			"match": "\\b(is)\\s+([a-zA-Z_][a-zA-Z0-9_]*)",
			"captures": {
				"1": {
					"name": "keyword"
				},
				"2": {
					"name": "entity.name.type"
				}
			}
		},
		"array": {
			"match": "\\[([a-zA-Z_][a-zA-Z0-9_]*)\\*([^\\;]+)\\;",
			"captures": {
				"1": {
					"name": "entity.name.type"
				},
				"2": {
					"patterns": [
						{
							"include": "#expr.as"
						},
						{
							"include": "#expr.is"
						},
						{
							"include": "#struct"
						},
						{
							"include": "#use"
						},
						{
							"include": "#function"
						},
						{
							"include": "#keywords"
						},
						{
							"include": "#strings"
						},
						{
							"include": "#char"
						},
						{
							"include": "#numberic"
						},
						{
							"include": "#function.call"
						},
						{
							"include": "#macro.call"
						},
						{
							"include": "#namespace.prefix"
						},
						{
							"include": "#variable"
						}
					]
				}
			}

		},
		"function": {
			"match": "\\b(fn)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\s*(<[^>]*>)?\\s*\\(([^\\)]*)\\)\\s*([^\\{]*)",
			"captures": {
				"1": {
					"name": "keyword"
				},
				"2": {
					"name": "entity.name.function"
				},
				"3": {
					"name": "entity.name.type"
				},
				"4": {
					"patterns": [
						{
							"include": "#annotated.param"
						},
						{
							"include": "#variable"
						}
					]
				},
				"5": {
					"name": "entity.name.type"
				}
			}
		},
		"annotated.param": {
			"match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*:\\s*([^,]*)",
			"captures": {
				"1": {
					"name": "variable.parameter"
				},
				"2": {
					"name": "entity.name.type"
				}
			}
		},
		"decimal": {
			"name": "constant.numeric",
			"match": "\\b([\\d_]+(\\.[\\d_]+)?(e[+-]?\\d+)?)\\b"
		},
		"hex": {
			"name": "constant.numeric",
			"match": "\\b0x[0-9a-fA-F_]+\\b"
		},
		"octal": {
			"name": "constant.numeric",
			"match": "\\b0o[0-7_]+\\b"
		},
		"binary": {
			"name": "constant.numeric",
			"match": "\\b0b[01_]+\\b"
		},
		"float": {
			"name": "constant.numeric",
			"match": "\\b[\\d_]+\\.[\\d_]+\\b"
		},
		"integer": {
			"name": "constant.numeric",
			"match": "\\b[\\d_]+\\b"
		},
		"numberic": {
			"name": "constant.numeric",
			"patterns": [
				{
					"include": "#decimal"
				},
				{
					"include": "#hex"
				},
				{
					"include": "#octal"
				},
				{
					"include": "#binary"
				},
				{
					"include": "#float"
				},
				{
					"include": "#integer"
				}
			]
		}
	},
	"scopeName": "source.pivot-lang"
}