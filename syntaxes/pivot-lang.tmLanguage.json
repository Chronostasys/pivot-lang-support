{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "pivot-lang",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#statement"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.pivot-lang",
					"match": "\\b(if|while|for|return|let|else|break|continue|struct|fn)\\b"
				},
				{
					"name": "keyword.other.pivot-lang",
					"match": "\\b(i8|i16|i32|i64|i128|u8|u16|u32|u64|u128|f32|f64|bool|void)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.pivot-lang",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pivot-lang",
					"match": "\\\\."
				}
			]
		},
		"statement": {
			"patterns": [
				{
					"includes": "#declaration"
				}
			]
		},
		"declaration": {
			"patterns": [
				{
					"include": "struct-declaration"
				}
			]
		},
		"struct-declaration": {
			"name": "meta.struct.pivot-lang",
			"begin": "(?<![\\.])(?:(\\bstruct\\b\\s*))(?:(\\b[_$a-zA-Z][\\w\\d_$]*\\b\\s*))({)",
			"beginCaptures": {
				"1": {
					"name": "keyword.control.struct.lang-pivot"
				},
				"2": {
					"name": "variable.other.writable.struct.pivot-lang"
				},
				"3": {
					"name": "punctuation.definition.block.pivot-lang"
				}
			},
			"end": "(?<=\\{)",
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#strings"
				}
			]
		}
	},
	"scopeName": "source.pivot-lang"
}